<h1> Listing all articles </h1>
<p>
<%= link_to 'Back to Alpha-Blog', root_path %> | <%= link_to "Create new article", new_article_path %>
</p>

<table>
 <tr>
	<th>Title</th>
	<th>Description</th>	
</tr>
<% @list_articles.each do |article| %>
	<tr>
		<td><%= article.title %> </td>
		<td><%= article.description %> </td>
		<td><%= link_to "Edit", edit_article_path(article), class: "btn btn-xs btn-primary" %></td>
		<td><%= link_to "Show", article_path(article), class: "btn btn-xs btn-primary" %></td>
		<td><%= link_to "Delete", article_path(article), method: :delete, data:{confirm: "Are you sure you want to delete"}, class: "btn btn-xs btn-danger" %></td>
	</tr>
	<% end %>
</table>